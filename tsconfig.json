{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    // "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "rootDir": "./src",
    "sourceMap": true,
    "lib": ["esnext"],
  },
  "include": ["src/**/*.ts", "src/schemas/index.js"],
  "exclude": ["node_modules"]
}
